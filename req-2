using System;
using System.Linq;

namespace Coding_Challenge_Calculator
{
    class Program
    {
        static void Main(string[] args)
        {
            string val;
            Console.Write("Enter 2 values to be summed, seperated by a comma(ex '5,23'): ");
            val = Console.ReadLine();

            //check to see if string has comma
            if (val.Contains(",") == true)
            {

                //loop to seperate values on comma
                string[] values = val.Split(',');
                for (int i = 0; i < values.Length; i++)
                {
                    values[i] = values[i].Trim();
                }

                //convert string array to int array
                int[] ints = Array.ConvertAll(values, int.Parse);

                //sum total and print
                int sum = ints.Sum();
                Console.WriteLine(sum);
            }

            else
            {
                Console.WriteLine(val);
            }
            
        }
    }
}
